{% endif %}
{% endif %}

{# ── Timing charts ── #}
{% if data.timing %}
barChart('durationChart',
  {{ data.timing.duration_buckets.keys() | list | tojson }},
  {{ data.timing.duration_buckets.values() | list | tojson }},
